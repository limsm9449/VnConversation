<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:paddingLeft="10dp"
    android:paddingTop="8dp"
    android:paddingRight="5dp"
    android:paddingBottom="8dp"
    android:descendantFocusability="blocksDescendants">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/my_rl_left"
        android:gravity="center_vertical|center_horizontal">

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/my_cb_check"
            android:button="@android:drawable/checkbox_off_background"
            android:textSize="10dp"
            android:layout_marginRight="10dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="false"
            android:textAlignment="center"
            android:gravity="start" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/my_rl_left">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Han"
            android:id="@+id/my_tv_han"
            android:layout_alignParentBottom="false"
            android:layout_alignParentRight="false"
            android:layout_alignParentEnd="false"
            android:textColor="@color/my_text_mean"
            android:textSize="13dp"
            android:layout_alignParentLeft="false"
            android:layout_alignWithParentIfMissing="false"
            android:layout_alignParentTop="false"
            android:gravity="center_vertical|left" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Foreign"
            android:id="@+id/my_tv_foreign"
            android:layout_alignParentLeft="true"
            android:textColor="@color/my_text_word"
            android:textSize="15dp"
            android:textStyle="normal|bold"
            android:layout_alignParentTop="false"
            android:layout_below="@+id/my_tv_han"
            android:layout_marginTop="5dp" />

    </RelativeLayout>

</RelativeLayout>